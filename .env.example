# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Keys
# Alpha Vantage API (for stock price data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# News API (optional, for additional news sources)
NEWS_API_KEY=your_news_api_key_here

# Twitter/X API (for social media sentiment)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Reddit API (for Reddit sentiment)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=your_app_name_here

# Google Cloud Platform (for Vertex AI)
GCP_PROJECT_ID=your_gcp_project_id_here
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# AWS (optional, for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Database Configuration
DB_TYPE=sqlite  # Options: sqlite, postgresql, mongodb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentiment_signal
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Scraping Configuration
SCRAPER_RATE_LIMIT=1.5  # Delay between requests in seconds
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=10
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Model Configuration
MODEL_BATCH_SIZE=32
MODEL_EPOCHS=100
MODEL_LEARNING_RATE=0.001
MODEL_LOOKBACK_WINDOW=60
MODEL_PREDICTION_HORIZON=5

# Sentiment Analysis
SENTIMENT_MODEL=finbert  # Options: finbert, vader, textblob
SENTIMENT_BATCH_SIZE=16

# Backtesting Configuration
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.001  # 0.1% commission
BACKTEST_SLIPPAGE=0.0005   # 0.05% slippage

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# Data Paths
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_MODELS_PATH=data/models

# Feature Flags
ENABLE_CACHING=True
ENABLE_MONITORING=False
ENABLE_PARALLEL_PROCESSING=True

# Notification Settings (optional)
ENABLE_NOTIFICATIONS=False
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password

# Development Settings
DEBUG=False
ENVIRONMENT=production  # Options: development, staging, production
